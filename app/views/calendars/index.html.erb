<p id="notice"><%= notice %></p>
<div class="page-header ">
</br>
  <h1 class="text-center">Calendar</h1>
  <div class="col-lg-offset-0">
    <%= link_to 'Add New Event', new_calendar_path, class: 'btn btn-primary' %>
  </div>
</div>
</br>
<div class="row">
<div class="col-md-3">
  <input class="form-control" id="myInput" type="text" placeholder="Search Datasheet">
</br>
</div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Event date</th>
      <th>Title</th>
      <th>Details</th>
      <th>People</th>
      <th>Creator</th>
      <th>Reoccurring</th>
      <th>Reoccurring rate</th>
      <th>Tag</th>
      <th>Extra d</th>
      <th>Extra i</th>
      <th>Extra s</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="myTable">
    <% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.event_date %></td>
        <td><%= calendar.title %></td>
        <td><%= calendar.details %></td>
        <td><%= calendar.people %></td>
        <td><%= calendar.creator %></td>
        <td><%= calendar.reoccurring %></td>
        <td><%= calendar.reoccurring_rate %></td>
        <td><%= calendar.tag %></td>
        <td><%= calendar.extra_d %></td>
        <td><%= calendar.extra_i %></td>
        <td><%= calendar.extra_s %></td>
        <td><%= link_to 'Show', calendar %></td>
        <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
        <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

