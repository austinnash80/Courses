<%= form_with(model: copyright, local: true) do |form| %>
  <% if copyright.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(copyright.errors.count, "error") %> prohibited this copyright from being saved:</h2>

      <ul>
      <% copyright.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row col-md-3">
  <div class="well length">
    <div class="field">
      <%= form.label :seq_number %>
      <%= form.number_field :seq_number, id: :copyright_seq_number %>
    </div>

    <div class="field">
      <%= form.label :publisher %>
      <%= form.text_field :publisher, id: :copyright_publisher %>
    </div>

    <div class="field">
      <%= form.label :author %>
      <%= form.text_field :author, id: :copyright_author %>
    </div>

    <div class="field">
      <%= form.label :book, 'Book Title'%>
      <%= form.text_field :book, id: :copyright_book %>
    </div>

    <div class="field">
      <%= form.label :cpdate, 'CR Date'%>
      <%= form.number_field :cpdate, id: :copyright_cpdate %>
    </div>

    <div class="actions">
      <%= form.submit 'Submit' %>
    </div>
  </div>
</div>
<% end %>
