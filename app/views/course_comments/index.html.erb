<p id="notice"><%= notice %></p>


<div class="well jumbotron">
  <h1 class="text-center">Course Comments</h1>
</div>

<strong><%= link_to 'New Course Comment', new_course_comment_path %></strong>
</br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Taken By</th>
      <!-- <th>Customer Name</th> -->
      <th>UID</th>
      <th>Comment Date</th>
      <th>Course Number</th>
      <th>Course Version</th>
      <th>Comment Type</th>
      <th>Comment Type Other</th>
      <th>Comment Details</th>
      <!-- <th>Extra b</th> -->
      <!-- <th>Extra d</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_comments.each do |course_comment| %>
      <tr>
        <td><%= course_comment.taken %></td>
        <!-- <td><%= course_comment.extra_s %></td> -->
        <td><%= course_comment.extra_i %></td>
        <td><%= course_comment.comment_date.blank? ? 'n/a' : course_comment.comment_date.strftime('%-m/%-d/%y') %></td>
        <td><%= course_comment.course_number %></td>
        <td><%= course_comment.course_version %></td>
        <td><%= course_comment.comment_type %></td>
        <td><%= course_comment.comment_type == 'Other' ? course_comment.comment_type_other : 'n/a' %></td>
        <td><%= course_comment.comment_details %></td>
        <!-- <td><%= course_comment.extra_b %></td> -->
        <!-- <td><%= course_comment.extra_d %></td> -->
        <td><%= link_to 'Show', course_comment %></td>
        <td><%= link_to 'Edit', edit_course_comment_path(course_comment) %></td>
        <td><%= link_to 'Destroy', course_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
