<%= simple_form_for(@course_creation_task) do |f| %>
  <%= f.error_notification %>
<div class="col-lg-8 col-lg-offset-2">
  <div class="form-inputs">
    <%= f.input :empire_course_id, as: :hidden %>
  </br>
    <div class="row">
      <div class="col-lg-6">
        <%= f.input :course_creation_templete_id, label: 'Tash', as: :select, collection: @templete, label_method: :second, value_method: :first %>
      </div>
      <div class="col-lg-6">
        <%= f.input :task, label: 'Templete', as: :select, collection: @task %>
      </div>
    </div>
    <%= f.input :task_note_1 %>
    <%= f.input :task_note_2 %>
    <div class="row">
      <h3 class="text-center">Assign Task</h5>
      <h5 class="text-center">Select all that apply</h5>
      <div class="col-lg-4">
        <%= f.input :assign_1, label: false, as: :select, collection: @assign %>
      </div>
      <div class="col-lg-4">
        <%= f.input :assign_2, label: false, as: :select, collection: @assign %>
      </div>
    <div class="col-lg-4">
      <%= f.input :assign_3, label: false, as: :select, collection: @assign %>
    </div>
  </div>
</div>
<br>
<br>

<!-- ** Section only for EDIT ** -->
<div class="row well well-white">
  <div class="col-lg-2">
    <%= f.input :extra_s, label: 'Status', as: :radio_buttons, collection: @status %>
  </div>
  <div class="col-lg-3">
    <%= f.input :extra_d, label: 'Date Completed' %>
  </div>
  <div class="col-lg-7">
    <%= f.input :task_note_3, label: 'Assignee Note' %>
  </div>
</div>
<!-- ** Section only for EDIT ** -->

