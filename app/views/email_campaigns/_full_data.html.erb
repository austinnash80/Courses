<table class="table table-hover">
  <thead>
    <tr>
      <th>Company</th>
      <th>Campaign name</th>
      <th>Delivery service</th>
      <th>List name</th>
      <th>Segment</th>
      <th>Segment range</th>
      <th>Segment note</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Active</th>
      <th>Inactive</th>
      <th>Tagline</th>
      <th>Emails sent</th>
      <th>Delivered</th>
      <th>Opened</th>
      <th>Clicked</th>
      <th>Blocked</th>
      <th>Bounce</th>
      <th>Spam</th>
      <th>Last Update</th>
      <th>Extra s</th>
      <th>Extra b</th>
      <th>Extra i</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @email_campaigns.each do |email_campaign| %>
      <tr>
        <td><%= email_campaign.company %></td>
        <td><%= email_campaign.campaign_name %></td>
        <td><%= email_campaign.delivery_service %></td>
        <td><%= email_campaign.list_name %></td>
        <td><%= email_campaign.segment %></td>
        <td><%= email_campaign.segment_range %></td>
        <td><%= email_campaign.segment_note %></td>
        <td><%= email_campaign.start_date %></td>
        <td><%= email_campaign.end_date %></td>
        <td><%= email_campaign.active %></td>
        <td><%= email_campaign.inactive %></td>
        <td><%= email_campaign.tagline %></td>
        <td><%= email_campaign.emails_sent %></td>
        <td><%= email_campaign.delivered %></td>
        <td><%= email_campaign.opened %></td>
        <td><%= email_campaign.clicked %></td>
        <td><%= email_campaign.blocked %></td>
        <td><%= email_campaign.bounce %></td>
        <td><%= email_campaign.spam %></td>
        <td><%= email_campaign.update_stats %></td>
        <td><%= email_campaign.extra_s %></td>
        <td><%= email_campaign.extra_b %></td>
        <td><%= email_campaign.extra_i %></td>
        <td><%= link_to 'Show', email_campaign %></td>
        <td><%= link_to 'Edit', edit_email_campaign_path(email_campaign) %></td>
        <td><%= link_to 'Destroy', email_campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
