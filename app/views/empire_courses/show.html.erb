<p id="notice"><%= notice %></p>

<div class="page-header ">
</br>
  <h1 class="text-center"><strong><%= @empire_course.title %></strong> </br><small>Course: <%= @empire_course.number %><%= @empire_course.version%></small></h1>
  <div class="col-lg-offset-1">
    <%= link_to 'Add Task', new_course_creation_task_path(:empire_course_id => @empire_course, :title => @empire_course.title), class: 'btn btn-default' %> <%= link_to 'Back to Index', empire_courses_path, class: 'btn btn-default' %> <%= link_to 'Edit Course', edit_empire_course_path(@empire_course), class: 'btn btn-default' %>

  </div>
</div>

<div class="row">
  <div class="col-lg-offset-1">
    <p><strong>Category:</strong> <%= @empire_course.category %></p>
    <p><strong>Hours:</strong> <%= @empire_course.hours %></p>
    <p><strong>Course Notes:</strong> <%= @empire_course.extra_s %></p>
    <p><strong>Development Status:</strong> <%= @empire_course.extra_b == true ? 'Complete' : 'In-progress' %></p>
  </div>
</div>

</br>

<div class="well well-white col-lg-10 col-lg-offset-1">
<h3 class="text-center">Tasks Created </h3>

<table class="table table-striped table-bordered">
  <thead>
    <th>Status</th>
    <th>Task</th>
    <th>Template</th>
    <th>Notes</th>
    <th>Assigned</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @course_creation_tasks.each do |course_creation_task| %>
    <% if course_creation_task.empire_course_id == @empire_course.id && course_creation_task.extra_s != 'Complete'%>
    <tr>
      <td class=""><%= course_creation_task.extra_s.blank? ? 'Not Taken' : course_creation_task.extra_s %></td>
      <td><%= course_creation_task.course_creation_templete.templete_type %></td>
      <td><%= course_creation_task.task %></td>
      <td><%= course_creation_task.task_note_1 %></td>
      <td><%= course_creation_task.assign_1.blank? ? 'Not Assigned' : course_creation_task.assign_1 %></td>
      <td><%= link_to 'Edit Task / Update Status', edit_course_creation_task_path(course_creation_task) %></td>
      <td><%= link_to 'View', course_creation_task %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</br>

<h3 class="text-center">Tasks Completed </h3>
<table class="table table-striped table-bordered">
  <thead>
    <th>Status</th>
    <th>Date Complete</th>
    <th>Task</th>
    <th>Template</th>
    <th>Notes</th>
    <th>Assigned</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @course_creation_tasks.each do |course_creation_task| %>
    <% if course_creation_task.empire_course_id == @empire_course.id && course_creation_task.extra_s == 'Complete'%>
    <tr>
      <td class="green"><%= course_creation_task.extra_s %></td>
      <td class=""><%= course_creation_task.extra_d.blank? ? 'nil' : course_creation_task.extra_d.strftime("%b %-d, %Y") %></td>
      <td><%= course_creation_task.course_creation_templete.templete_type %></td>
      <td><%= course_creation_task.task %></td>
      <td><%= course_creation_task.task_note_1 %></td>
      <td><%= course_creation_task.assign_1.blank? ? 'Not Assigned' : course_creation_task.assign_1 %></td>
      <td><%= link_to 'Edit', edit_course_creation_task_path(course_creation_task) %></td>
      <td><%= link_to 'View', course_creation_task %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>
