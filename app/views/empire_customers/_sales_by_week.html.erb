<% data = EmpireCustomer.group_by_week(:p_date, week_start: :mon).sum(:total) %>
<div class="container">

  <div class="row">
    <div class="col-md-4">
      <table class="table table-outline">
        <thead>
          <tr class="grey-b-200">
            <th class="text-center" colspan="2">2019</th>
          </tr>
          <tr>
            <th>Week Of</th>
            <th>Sales</th>
          </tr>
        </thead>
        <tbody>
          <% data.each do |k, v| %>
          <% if k.strftime('%Y') == '2019' || k.strftime('%-m/%-d/%y') == '12/31/18' %>
            <tr>
              <td><%= k.strftime('%-m/%-d/%y')%> - <%= (k + 6.days).strftime('%-m/%-d/%y') %></td>
              <td><%= number_to_currency(v) %></td>
            </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-outline">
        <thead>
          <tr class="grey-b-200">
            <th class="text-center" colspan="2">2020</th>
          </tr>
          <tr>
            <th>Week Of</th>
            <th>Sales</th>
          </tr>
        </thead>
        <tbody>
          <% data.each do |k, v| %>
          <% if k.strftime('%Y') == '2020' || k.strftime('%-m/%-d/%y') == '12/30/19' %>
            <tr>
              <td><%= k.strftime('%-m/%-d/%y')%> - <%= (k + 6.days).strftime('%-m/%-d/%y') %></td>
              <td><%= number_to_currency(v) %></td>
            </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-outline">
        <thead>
          <tr class="grey-b-200">
            <th class="text-center" colspan="2">2021</th>
          </tr>
          <tr>
            <th>Week Of</th>
            <th>Sales</th>
          </tr>
        </thead>
        <tbody>
          <% data.each do |k, v| %>
          <% if k.strftime('%Y') == '2021' || k.strftime('%-m/%-d/%y') == '12/28/20' %>
            <tr>
              <td><%= k.strftime('%-m/%-d/%y')%> - <%= (k + 6.days).strftime('%-m/%-d/%y') %></td>
              <td><%= number_to_currency(v) %></td>
            </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
