<h1 class="text-center">Exports Page</h1>

<h3 class="text-center alert alert-info"><%= @message %></h3>
<h3>Renewal Cycle: <%= @renewal_year %></h3>
<p>Start Quanity: <strong><%= number_with_delimiter(@export_2.count) %></strong> - <a href="#" data-toggle="tooltip" title="<%= @info %>">Info</a>
</p>
<p>Export Quanity: <strong><%= number_with_delimiter(@export.count) %></strong></p>
<div class="">
  <%= link_to 'Export List', exports_empire_customers_path(page: 'pa_email', format: 'csv'), class: 'btn btn-success' %>
  <br><br>
</div>

<table class="table table-outline">
  <thead>
    <tr>
      <th colspan="5" class="">Export Sample</th>
    </tr>
    <tr>
      <th>UID</th>
      <th>Lic State</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @show.each do |empire_customer| %>
    <tr>
      <td><%= empire_customer.uid %></td>
      <td><%= empire_customer.lic_state %></td>
      <td><%= empire_customer.fname %></td>
      <td><%= empire_customer.lname %></td>
      <td><%= empire_customer.email %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<script>
$(document).ready(function(){
  $('[data-toggle="tooltip"]').tooltip();
});
</script>
