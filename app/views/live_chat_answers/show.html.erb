<div class="well well-white" >
  <h3 class=""><strong>Details</strong></h3>
</br>


  <h4>
    <strong>Company:</strong>
    <%= @live_chat_answer.company %>
  </h4>

  <% if @live_chat_answer.topic.empty? %>
    <h4>
      <strong>Des:</strong>
      <%= @live_chat_answer.des %>
    </h4>
    <h4>
      <strong>State:</strong>
      <%= @live_chat_answer.state %>
    </h4>
  </br>
    <p>
      <strong>Question:</strong>
      <%= @live_chat_answer.question %>
    </p>

    <p>
      <strong>Answer:</strong>
      <%= @live_chat_answer.answer %>
    </p>

    <p>
      <strong>Extra Notes:</strong>
      <%= @live_chat_answer.notes %>
    </p>
<!-- for Policy -->
  <% elsif %>
    <h4>
      <strong>Topic:</strong>
      <%= @live_chat_answer.topic %>
    </h4>

    <h4>
      <strong>Policy:</strong>
      <%= @live_chat_answer.policy %>
    </h4>
  <% end %>



  </div>


