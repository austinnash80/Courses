<div class="page-header ">
</br>
<% if @live_chat_answer.topic.blank? %>
  <h1 class="text-center"><strong>Question - <%= @live_chat_answer.question %></strong> </br><small>Added: <%= @live_chat_answer.date_org.strftime("%b %-d, %Y")%></small></h1>
<% elsif %>
  <h1 class="text-center"><strong>Topic - <%= @live_chat_answer.topic %></strong> </br><small>Added: <%= @live_chat_answer.date_org.strftime("%b %-d, %Y")%></small></h1>
<% end %>

  <div class="col-lg-offset-2">
    <%= link_to 'Other Canned Responses', live_chat_answers_path, class: 'btn btn-default' %> <%= link_to 'Edit Answer', edit_live_chat_answer_path(@live_chat_answer), class: 'btn btn-default' %> <%= link_to 'Add New', new_live_chat_answer_path(@live_chat_answer), class: 'btn btn-default' %>
  </div>
</div>
</br>
