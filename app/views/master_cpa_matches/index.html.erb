<p id="notice"><%= notice %></p>

<%= link_to 'Export - Sequoia Match (CPA)', master_cpa_matches_path('csv'), class: 'btn btn-default' %>
<br><br>
<div class="row">
  <div class="well col-md-3">
    <p>Upload New List (CSV)</p>
      <%= form_tag import_master_cpa_matches_path, multipart: true do %>
      <%= file_field_tag :file %>
    <br>
      <%= submit_tag 'Upload', class: 'btn btn-default' %>
    <% end %>
  <br>
    <% if params['remove_all'] == 'yes' %>
      <p><%= link_to "Confirm Delete", master_cpa_matches_path(remove_all: 'yes', confirm: 'yes') %></p>
    <% else %>
      <p><%= link_to "Remove All Records", master_cpa_matches_path(remove_all: 'yes') %></p>
    <% end %>
  </div>
</div>

<h1 class="text-center">Master Cpa Matches</h1>

<table class="table table-outline">
  <caption>Displaying 250 of <%= number_with_delimiter(@master_cpa_matches.count) %></caption>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Lname</th>
      <th>lid</th>
      <th>List</th>
      <th>Search date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% MasterCpaMatch.order(search_date: :desc).first(250).each do |master_cpa_match| %>
      <tr>
        <td><%= master_cpa_match.uid %></td>
        <td><%= master_cpa_match.lname %></td>
        <td><%= master_cpa_match.lid %></td>
        <td><%= master_cpa_match.list %></td>
        <td><%= master_cpa_match.search_date %></td>
        <td><%= link_to 'Show', master_cpa_match %></td>
        <td><%= link_to 'Edit', edit_master_cpa_match_path(master_cpa_match) %></td>
        <td><%= link_to 'Destroy', master_cpa_match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

