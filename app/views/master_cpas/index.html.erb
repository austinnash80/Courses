<p id="notice"><%= notice %></p>

<p>Upload New List (CSV)</p>
  <%= form_tag import_master_cpas_path, multipart: true do %>
  <%= file_field_tag :file %>
<br>
  <%= submit_tag 'Upload', class: 'btn btn-default' %>
<% end %>

<p>CPA NEW Memberships: <%= @cpa_memerships %></p>
<p>CPA NEW Memberships match: <%= @cpa_memerships_match %></p>

<%= link_to 'Run', master_cpas_path(run: 'cpa_new') %>


<h1>Sequoia Customers</h1>

<table>
  <thead>
    <tr>
      <th>uid</th>
      <th>purchase_date</th>
      <th>product</th>
      <th>Last</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cpa_memerships_new.limit(100).each do |customer| %>
    <tr>
      <td><%= customer.uid %></td>
      <td><%= customer.purchase %></td>
      <td><%= customer.product_1 %></td>
      <td><%= customer.lname %></td>
      <td><%= customer.lname %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h1>Master Cpas</h1>

<table>
  <thead>
    <tr>
      <th>List</th>
      <th>Lid</th>
      <th>Lic</th>
      <th>Lic st</th>
      <th>Fname</th>
      <th>Mi</th>
      <th>Lname</th>
      <th>Suf</th>
      <th>Co</th>
      <th>Add2</th>
      <th>Add</th>
      <th>City</th>
      <th>St</th>
      <th>Zip</th>
      <th>UID</th>
      <th>Membership</th>
      <th>Ethics</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @master_cpas.where.not(uid: nil).limit(10).each do |master_cpa| %>
      <tr>
        <td><%= master_cpa.list %></td>
        <td><%= master_cpa.lid %></td>
        <td><%= master_cpa.lic %></td>
        <td><%= master_cpa.lic_st %></td>
        <td><%= master_cpa.fname %></td>
        <td><%= master_cpa.mi %></td>
        <td><%= master_cpa.lname %></td>
        <td><%= master_cpa.suf %></td>
        <td><%= master_cpa.co %></td>
        <td><%= master_cpa.add2 %></td>
        <td><%= master_cpa.add %></td>
        <td><%= master_cpa.city %></td>
        <td><%= master_cpa.st %></td>
        <td><%= master_cpa.zip %></td>
        <td><%= master_cpa.uid %></td>
        <td><%= master_cpa.membership %></td>
        <td><%= master_cpa.ethics %></td>
        <td><%= link_to 'Show', master_cpa %></td>
        <td><%= link_to 'Edit', edit_master_cpa_path(master_cpa) %></td>
        <td><%= link_to 'Destroy', master_cpa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

