<p id="notice"><%= notice %></p>

<div class="row">
  <div class="well col-md-3">
    <p>Upload New EA No Match List (CSV)</p>
      <%= form_tag import_master_ea_no_matches_path, multipart: true do %>
      <%= file_field_tag :file %>
    <br>
      <%= submit_tag 'Upload', class: 'btn btn-default' %>
    <% end %>
  <br>
    <% if params['remove_all'] == 'yes' %>
      <p><%= link_to "Confirm Delete", master_ea_no_matches_path(remove_all: 'yes', confirm: 'yes') %></p>
    <% else %>
      <p><%= link_to "Remove All Records", master_ea_no_matches_path(remove_all: 'yes') %></p>
    <% end %>
  </div>
</div>

<h1 class="text-center">Master EA No Matches</h1>
<p class="text-center"><%= link_to 'Back to EA search', ea_customers_master_eas_path() %></p>
<p><%= link_to 'Export', master_ea_no_matches_path('csv'), class: 'btn btn-primary' %></p>


<table class="table table-outline">
  <caption>Displaying <%= number_with_delimiter(MasterEaNoMatch.limit(500).count) %> of <%= number_with_delimiter(MasterEaNoMatch.count) %></caption>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Lname</th>
      <th>List</th>
      <th>Search date</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @master_ea_no_matches.order(created_at: :DESC).limit(500).each do |master_ea_no_match| %>
      <tr>
        <td><%= master_ea_no_match.uid %></td>
        <td><%= master_ea_no_match.lname %></td>
        <td><%= master_ea_no_match.list %></td>
        <td><%= master_ea_no_match.search_date %></td>
        <td><%= link_to 'Destroy', master_ea_no_match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Master Ea No Match', new_master_ea_no_match_path %>
