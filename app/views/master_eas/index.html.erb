<h1 class="text-center">Master EA List</h1>
<div class="row">
  <div class="well col-md-3">
    <p class="">Master List Upload (CSV)</p>
      <%= form_tag import_master_eas_path, multipart: true do %>
      <%= file_field_tag :file %>
    <br>
      <%= submit_tag 'Upload', class: 'btn btn-default' %>
    <% end %>
    <br>
    <a class="" data-toggle="collapse" data-target="#demo">List Upload Steps</a>
    <div id="demo" class="collapse">
      <ul>
        <li>Export - current list, customer list, no match list, no mail </li>
        <li>In Access - match all list the new the master list</li>
        <li>Delete all lists (master, customer etc.)</li>
        <li>Upload all new lists with new 'LID' and 'List' fields</li>
      </ul>
    </div>
  </div>
</div>


<table class="table table-outline">
  <caption>Displaying 250 of <%= number_with_delimiter(MasterEa.count) %></caption>
  <thead>
    <tr>
      <th>Lid</th>
      <th>List</th>
      <th>Lic Num</th>
      <th>Fname</th>
      <th>MI</th>
      <th>Lname</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Customer</th>
      <th>No Mail</th>
    </tr>
  </thead>

  <tbody>
    <% MasterEa.first(250).each do |master_cpa| %>
      <tr>
        <td><%= master_cpa.lid %></td>
        <td><%= master_cpa.list %></td>
        <td><%= master_cpa.lic %></td>
        <td><%= master_cpa.fname %></td>
        <td><%= master_cpa.mi %></td>
        <td><%= master_cpa.lname %></td>
        <td><%= master_cpa.city %></td>
        <td><%= master_cpa.st %></td>
        <td><%= master_cpa.zip %></td>
        <td><%= master_cpa.uid %></td>
        <td><%= master_cpa.no_mail %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<div class="row">
  <div class="col-md-2">
    <%= text_field_tag "id", '', placeholder: 'UID', class: "uid_field form-control" %>
  </div>
</div>
<div class="row down20">
  <div class="col-md-2">
    <%= text_field_tag "id", '', placeholder: 'Search by Last Name', class: "lname_field form-control" %>
  </div>
</div>
<div class="down20">
  <%= link_to 'Search EA List', search_master_eas_path, class: 'search_link btn btn-primary' %>
</div>

<p id="notice"><%= notice %></p>

<h1>EA Master Search</h1>

<table class="table table-outline table-striped">
  <caption>Unmatched Sequoia Customers (EA Only)</caption>
  <thead>
    <tr>
      <th>uid</th>
      <th>purchase_date</th>
      <th>product</th>
      <th>First</th>
      <th>Last</th>
      <th>Address</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @ea_new.each do |customer| %>
    <tr>
      <td><%= customer.uid %></td>
      <td><%= customer.purchase %></td>
      <td><%= customer.product_1 %></td>
      <td><%= customer.fname %></td>
      <td><%= customer.lname %></td>
      <td><%= customer.street_1 %></td>
      <td><%= customer.street_2 %></td>
      <td><%= customer.city %></td>
      <td><%= customer.state %></td>
      <td><%= customer.zip %></td>
      <td><%= customer.email %></td>
    </tr>
    <% end %>
  </tbody>
</table>




<script>
$(".search_link").click(function() {
  $(this).attr("href", function() {
    return this.href + "?lname=" + $('.lname_field').val().toUpperCase() + "&uid=" + $('.uid_field').val();
  });
});
</script>
