<h1 class="text-center">Master EA List</h1>
<div class="row">
  <div class="well col-md-3">
    <p class="">Master List Upload (CSV)</p>
      <%= form_tag import_master_eas_path, multipart: true do %>
      <%= file_field_tag :file %>
    <br>
      <%= submit_tag 'Upload', class: 'btn btn-default' %>
    <% end %>
    <br>
      <% if params['remove_all'] == 'yes' %>
        <p><%= link_to "Confirm Delete", master_eas_path(remove_all: 'yes', confirm: 'yes') %></p>
      <% else %>
        <p><%= link_to "Remove All Records", master_eas_path(remove_all: 'yes') %></p>
      <% end %>
    <br>
    <a class="" data-toggle="collapse" data-target="#demo">List Upload Steps</a>
    <div id="demo" class="collapse">
      <ul>
        <li>Export - current list, customer list, no match list, no mail </li>
        <li>In Access - match all list the new the master list</li>
        <li>Delete all lists (master, customer etc.)</li>
        <li>Upload all new lists with new 'LID' and 'List' fields</li>
      </ul>
    </div>
  </div>
</div>


<table class="table table-outline">
  <caption>Displaying 250 of <%= number_with_delimiter(MasterEa.count) %></caption>
  <thead>
    <tr>
      <th>Lid</th>
      <th>List</th>
      <th>Lic Num</th>
      <th>Fname</th>
      <th>MI</th>
      <th>Lname</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Customer</th>
      <th>No Mail</th>
    </tr>
  </thead>

  <tbody>
    <% MasterEa.first(250).each do |master_cpa| %>
      <tr>
        <td><%= master_cpa.lid %></td>
        <td><%= master_cpa.list %></td>
        <td><%= master_cpa.lic %></td>
        <td><%= master_cpa.fname %></td>
        <td><%= master_cpa.mi %></td>
        <td><%= master_cpa.lname %></td>
        <td><%= master_cpa.city %></td>
        <td><%= master_cpa.st %></td>
        <td><%= master_cpa.zip %></td>
        <td><%= master_cpa.uid %></td>
        <td><%= master_cpa.no_mail %></td>
      </tr>
    <% end %>
  </tbody>
</table>
