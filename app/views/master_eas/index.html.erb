<div class="row">
  <div class="col-md-2">
    <%= text_field_tag "id", '', placeholder: 'UID', class: "uid_field form-control" %>
  </div>
</div>
<div class="row down20">
  <div class="col-md-2">
    <%= text_field_tag "id", '', placeholder: 'Search by Last Name', class: "lname_field form-control" %>
  </div>
</div>
<div class="down20">
  <%= link_to 'Search EA List', search_master_eas_path, class: 'search_link btn btn-primary' %>
</div>

<p id="notice"><%= notice %></p>

<h1>EA Master Search</h1>

<table class="table table-outline table-striped">
  <caption>Unmatched Sequoia Customers (EA Only)</caption>
  <thead>
    <tr>
      <th>uid</th>
      <th>purchase_date</th>
      <th>product</th>
      <th>First</th>
      <th>Last</th>
      <th>Address</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @ea_new.each do |customer| %>
    <tr>
      <td><%= customer.uid %></td>
      <td><%= customer.purchase %></td>
      <td><%= customer.product_1 %></td>
      <td><%= customer.fname %></td>
      <td><%= customer.lname %></td>
      <td><%= customer.street_1 %></td>
      <td><%= customer.street_2 %></td>
      <td><%= customer.city %></td>
      <td><%= customer.state %></td>
      <td><%= customer.zip %></td>
      <td><%= customer.email %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<a class="btn" data-toggle="collapse" data-target="#demo">List Upload</a>
<div id="demo" class="collapse">
  <p class="down20">Upload CSV List</p>
    <%= form_tag import_master_eas_path, multipart: true do %>
    <%= file_field_tag :file %>
  <br>
    <%= submit_tag 'Upload', class: 'btn btn-default' %>
  <% end %>
</div>


<script>
$(".search_link").click(function() {
  $(this).attr("href", function() {
    return this.href + "?lname=" + $('.lname_field').val().toUpperCase() + "&uid=" + $('.uid_field').val();
  });
});
</script>
