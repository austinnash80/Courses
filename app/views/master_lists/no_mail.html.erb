<h1 class="text-center">No Mails - Sequoia</h1>

<%= link_to 'Back to Master Lists', master_lists_path %></br></br>
<div class="row">
  <div class=" well col-md-3">
    <input class="form-control" id="myInput" type="text" placeholder="Search Table..">
  </div>
</div>

  <%= link_to 'Export Full List', no_mail_master_lists_path('csv'), class: 'btn btn-default' %>
<br>
<p>Total List size: <%= number_with_delimiter(@no_mails_count) %></p>


<table class="table">
  <thead>
    <tr>
      <th>Who</th>
      <th>List</th>
      <th>Lid</th>
      <th>Lic</th>
      <th>Fname</th>
      <th>Mi</th>
      <th class="blue">Lname</th>
      <th>Suf</th>
      <th>Co</th>
      <th>Add2</th>
      <th>Add</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>No mail</th>
      <th></th>
    </tr>
  </thead>

  <tbody id="myTable">
    <%# @master_lists.each do |master_list| %>
    <% @no_mails.each do |no_mail| %>
      <tr>
        <td><%= no_mail.who %></td>
        <td><%= no_mail.list %></td>
        <td><%= no_mail.lid %></td>
        <td><%= no_mail.lic %></td>
        <td><%= no_mail.fname %></td>
        <td><%= no_mail.mi %></td>
        <td><%= no_mail.lname %></td>
        <td><%= no_mail.suf %></td>
        <td><%= no_mail.co %></td>
        <td><%= no_mail.add2 %></td>
        <td><%= no_mail.add %></td>
        <td><%= no_mail.city %></td>
        <td><%= no_mail.state %></td>
        <td><%= no_mail.zip %></td>
        <td><%= no_mail.updated_at %></td>
        <td class="red"><strong><%= no_mail.no_mail %></strong></td>
      </tr>
    <% end %>
  </tbody>
</table>


<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
