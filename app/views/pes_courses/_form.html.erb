<%= form_with(model: pes_course, local: true) do |form| %>
  <% if pes_course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pes_course.errors.count, "error") %> prohibited this pes_course from being saved:</h2>

      <ul>
      <% pes_course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :pes_number %>
    <%= form.number_field :pes_number, id: :pes_course_pes_number %>
  </div>

  <div class="field">
    <%= form.label :tag %>
    <%= form.select :tag, ['N/A', 'New', 'Top Seller', 'Hot Topic', 'Popular'], id: :pes_course_tag %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :pes_course_category %>
  </div>

  <div class="field">
    <%= form.label :hours %>
    <%= form.number_field :hours, id: :pes_course_hours %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :pes_course_title %>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active, id: :pes_course_active, value: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
