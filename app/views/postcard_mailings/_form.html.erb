      <h3>Type of Mailing</h3>

      <div class="field">
        <%= form.label :company %>
        <%= form.select :company, ['Sequoia','Empire'], id: :postcard_mailing_company %>
      </div>

      <div class="field">
        <%= form.label :version, 'Type' %>
        <%= form.select :version, ['CPA NM', 'CPA RC', 'EA NM', 'EA RC', 'Empire RC', 'Empire NM', 'Other'], id: :postcard_mailing_version %>
      </div>

    </div>

    <div class="well">
      <h3>Mailing Details</h3>
      <div class="field">
        <%= form.label :sent %>
        <%= form.check_box :sent, id: :postcard_mailing_sent %>
      </div>

      <div class="field">
        <%= form.label :date_sent, 'Date of Mailing' %>
        <%= form.date_select :date_sent, id: :postcard_mailing_date_sent %>
      </div>

      <div class="field">
        <%= form.label :number_sent, 'Number of Postcards Sent' %>
        <%= form.number_field :number_sent, id: :postcard_mailing_number_sent %>
      </div>

      <div class="field">
        <%= form.label :note, 'Add Addtional Note' %>
        <%= form.text_area :note, id: :postcard_mailing_note %>
      </div>

    </div>

