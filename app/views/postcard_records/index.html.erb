<p id="notice"><%= notice %></p>

<h1>Postcard Records</h1>

<table class="table">
  <thead>
    <tr>
      <th>Company</th>
      <th>Group</th>
      <th>Mailing</th>
      <th>Mail date</th>
      <th>Card</th>
      <th>Sent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postcard_records.each do |postcard_record| %>
      <tr>
        <td><%= postcard_record.company %></td>
        <td><%= postcard_record.group %></td>
        <td><%= postcard_record.mailing_id %></td>
        <td><%= postcard_record.mail_date %></td>
        <td><%= postcard_record.card %></td>
        <td><%= postcard_record.sent %></td>
        <td><%= link_to 'Show', postcard_record %></td>
        <td><%= link_to 'Edit', edit_postcard_record_path(postcard_record) %></td>
        <td><%= link_to 'Destroy', postcard_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

