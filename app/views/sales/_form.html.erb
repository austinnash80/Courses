
<%= simple_form_for(@sale) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :day %>
    <div class="row">
      <div class="col-lg-4">
        <%= f.input :sequoia %>
      </div>
      <div class="col-lg-4">
        <%= f.input :empire %>
      </div>
      <div class="col-lg-4">
        <%= f.input :pacific %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
