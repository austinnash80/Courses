    <h3>HOME</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Task</th>
          <th>Status</th>
          <th>Note</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Call Logs</td>
          <td><strong>Ongoing</strong></td>
          <td><strong><%= link_to 'New Call', new_call_log_path %></strong></td>
        </tr>
        <tr>
          <td>Course Comment</td>
          <td><strong>Ongoing</strong></td>
          <td><strong><%= link_to 'New Comment', new_course_comment_path %></strong></td>
        </tr>
        <tr>
          <td>Course Updating</td>
          <% if @course_update_status.sum == 0 %>
            <td class="green"><strong>No Updates</strong></td>
            <td><%= link_to 'Updatesheet', updatesheets_path %> | <%= link_to 'Datasheet', datasheets_path %></td>
          <% elsif %>
            <td class="red"><strong><%= link_to "Updates (#{@course_update_status.sum})", updatesheets_path, class: 'button-none' %></strong></td>
            <td><%= link_to 'Updatesheet', updatesheets_path %> | <%= link_to 'Datasheet', datasheets_path %></td>
          <% end %>
        </tr>
        <tr>
          <td>Course Proofing</td>
          <% if @course_update_status_proofing.sum == 0 %>
            <td class="green"><strong>Up-to-date</strong></td>
            <td><%= link_to 'Updatesheet', updatesheets_path %> | <%= link_to 'Datasheet', datasheets_path %></td>
          <% elsif %>
            <td class="red"><strong><%= link_to "In-progress (#{@course_update_status_proofing.sum})", updatesheets_path, class: 'button-none' %></strong></td>
            <td><%= link_to 'Updatesheet', updatesheets_path %> | <%= link_to 'Datasheet', datasheets_path %></td>
          <% end %>
        </tr>
        <tr>
          <% pes_due_date = @pes_list_update + 30 %>
          <% today = Date.today %>
          <% due_soon = pes_due_date - 4 %>

          <td>PES List Update</td>
          <% if today < due_soon  %>
            <td class=""><strong>Due: <span class="green"><%= pes_due_date.strftime('%-m/%-d/%y') %></span></strong></td>
          <% elsif today > due_soon && today < pes_due_date %>
            <td class=""><strong>Due: <span class="red"><%= pes_due_date.strftime('%-m/%-d/%y') %><span></strong></td>
          <% elsif today > pes_due_date %>
            <td class=""><strong>Due: <span class="red">Past Due</span></strong></td>
          <% end %>
            <td><%= link_to 'Update', pes_courses_path %>
        </tr>
      </tbody>

    </table>


