            <th>Task</th>
            <th>Note</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Returned Postcards</td>
            <td>Add as received</td>
            <td><%= link_to 'Add New', new_postcard_return_path %></td>
