                <% elsif %>
                  <td><%= @remaining_inventory_sequoia_ea_nm %></td>
                <% end %>
              </tr>
              <tr>
                <td>Sequoia</td>
                <td>EA RC</td>
                <td><%= @date_sequoia_ea_rc.max.strftime('%-m/%-d/%y') %></td>
                <td><%= @number_sequoia_ea_rc[0] %></td>
