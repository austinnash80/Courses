                <% elsif %>
                  <td><%= @remaining_inventory_sequoia_ea_rc %></td>
                <% end %>
              </tr>
              <tr>
                <td>Empire</td>
                <td>General RC</td>
                <td><%= @date_empire_rc.max.strftime('%-m/%-d/%y') %></td>
