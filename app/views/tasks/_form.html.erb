<%= simple_form_for(@task) do |f| %>

  <%= f.error_notification %>
</br>
<div class="well well-white col-lg-offset-3 col-lg-6">
</br>
<div class="row">
  <div class="col-lg-12">
    <%= f.input :title, label: 'Task Title' %>
  </br>
    <%= f.input :note, label: 'Task' %>
  </br>
    <%= f.input :update_note, label: 'Task Note 1' %>
    <%= f.input :additional_note_2, label: 'Task Note 2' %>
    <%= f.input :additional_note_3, label: 'Task Note 3' %>
  </div>
</div>
</br>
<div class="row">
  <h3 class="text-center"><strong>Task Status</strong></h3>
</br>
  <div class="col-lg-offset-1 col-lg-3">
    <%= f.input :extra_string, label: 'Type', as: :radio_buttons, collection: @task_status %>
  </div>
  <div class="col-lg-3">
    <%= f.input :due, label: 'Assign a Due Date?', as: :radio_buttons, :checked => ['No', false] %>
  </div>
  <div class="col-lg-5">
    <%= f.input :due_date, label: 'Due Date' %>
  </div>
</div>

